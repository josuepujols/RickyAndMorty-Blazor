<!--Controls-->
<div class="d-flex justify-content-center w-100 mt-3">
    <input id="input-search" 
            type="text" 
            class="form-control w-50" 
            placeholder="Search a character"
             @bind="@SearchTerm" @oninput="@((e) => { SearchTerm=(string)e.Value;})"/>
